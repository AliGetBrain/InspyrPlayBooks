{
  "name": "Inspyr Call Summary Email",
  "playbook": {
    "subject": "Invoice {{#each invoiceData}}#{{invoiceNumber}} {{/each}}Client: {{contactCompanyName}}, Call Summary",
    "body": "<!DOCTYPE html>\r\n<html>\r\n  <head>\r\n    <meta charset=\"UTF-8\" />\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\r\n    <title>Call Summary</title>\r\n  </head>\r\n<body\r\n    style=\"font-family: Arial, Helvetica, sans-serif; line-height: 1.6; color: #1f2937; max-width: 800px; margin: 0 auto; padding: 40px 20px; background-color: #f9fafb;\">\r\n        <div style=\"margin-bottom: 12px; background: {{primaryColor}}; border-radius: 8px 8px 0 0; padding: 12px; text-align: center; font-family: Arial, Helvetica, sans-serif;\">\r\n        <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\r\n            <tr>\r\n                <td>\r\n                    <h1 style=\"color: white; margin: 0; font-size: 1.5rem; font-weight: 600; letter-spacing: 0.025em;\">CALL SUMMARY</h1>\r\n                    <p style=\"color: rgba(255, 255, 255, 0.9); margin: 8px 0 0 0; font-size: 1rem;\">{{contactCompanyName}} - {{callDate}}</p>\r\n                </td>\r\n            </tr>\r\n        </table>\r\n    </div>\r\n    <div style=\"background: white; border-radius: 12px; padding: 40px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); position: relative; overflow: hidden;\">\r\n\r\n    <table\r\n      cellpadding=\"0\"\r\n      cellspacing=\"0\"\r\n      border=\"0\"\r\n      width=\"100%\"\r\n      style=\"max-width: 600px; margin: 0 auto\"\r\n    >\r\n      <!-- Client Info Card -->\r\n      <tr>\r\n        <td style=\"padding: 15px 20px 0 20px\">\r\n          <table\r\n            cellpadding=\"0\"\r\n            cellspacing=\"0\"\r\n            border=\"0\"\r\n            width=\"100%\"\r\n            style=\"\r\n              background-color: #ffffff;\r\n              border-radius: 6px;\r\n              box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n            \"\r\n          >\r\n            <tr>\r\n              <td style=\"padding: 20px\">\r\n                <h2\r\n                  style=\"\r\n                    color: {{primaryColor}};\r\n                    margin: 0 0 15px 0;\r\n                    font-size: 18px;\r\n                    border-bottom: 1px solid #eeeeee;\r\n                    padding-bottom: 10px;\r\n                  \"\r\n                >\r\n                  Client Details\r\n                </h2>\r\n                <table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\">\r\n                  <tr>\r\n                    <td\r\n                      width=\"50%\"\r\n                      style=\"vertical-align: top; padding-right: 10px\"\r\n                    >\r\n                      <p style=\"margin: 0 0 5px 0; font-weight: bold; color: #666666\">\r\n                        Client:\r\n                      </p>\r\n                      <p style=\"margin: 0 0 10px 0; color: #333333\">\r\n                        {{contactCompanyName}}\r\n                      </p>\r\n                       <p style=\"margin: 0 0 5px 0; font-weight: bold; color: #666666\">\r\n                        Client Email:\r\n                      </p>\r\n                      <p style=\"margin: 0 0 10px 0; color: #333333\">\r\n                        {{contactEmail}}\r\n                      </p>\r\n                    </td>\r\n                    <td\r\n                      width=\"50%\"\r\n                      style=\"vertical-align: top; padding-left: 10px\"\r\n                    >\r\n                      <p style=\"margin: 0 0 5px 0; font-weight: bold; color: #666666\">\r\n                       Customer #\r\n                      </p>\r\n                      <p style=\"margin: 0 0 10px 0; color: #333333\">\r\n                        {{customerNumber}}\r\n                      </p>\r\n                       <p style=\"margin: 0 0 5px 0; font-weight: bold; color: #666666\">\r\n                        Call Date:\r\n                      </p>\r\n                      <p style=\"margin: 0 0 10px 0; color: #333333\">\r\n                        {{ callDate}}\r\n                      </p>\r\n                    </td>\r\n                  </tr>\r\n                </table>\r\n              </td>\r\n            </tr>\r\n          </table>\r\n        </td>\r\n      </tr>\r\n\r\n      <!-- Invoices Card -->\r\n      <tr>\r\n        <td style=\"padding: 15px 20px 0 20px\">\r\n          <table\r\n            cellpadding=\"0\"\r\n            cellspacing=\"0\"\r\n            border=\"0\"\r\n            width=\"100%\"\r\n            style=\"\r\n              background-color: #ffffff;\r\n              border-radius: 6px;\r\n              box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n            \"\r\n          >\r\n            <tr>\r\n              <td style=\"padding: 20px\">\r\n                <h2\r\n                  style=\"\r\n                    color:{{primaryColor}};\r\n                    margin: 0 0 15px 0;\r\n                    font-size: 18px;\r\n                    border-bottom: 1px solid #eeeeee;\r\n                    padding-bottom: 10px;\r\n                  \"\r\n                >\r\n                  Invoices Discussed\r\n                </h2>\r\n                \r\n                {{#each invoiceData}}\r\n               \r\n                <!-- Invoice Items -->\r\n                {{#if (eq tag 'willPay')}}\r\n                  <table\r\n                    cellpadding=\"0\"\r\n                    cellspacing=\"0\"\r\n                    border=\"0\"\r\n                    width=\"100%\"\r\n                    style=\"\r\n                      margin-bottom: 10px;\r\n                      background-color: #f9f9f9;\r\n                      border-left: 4px solid #4caf50;\r\n                      border-radius: 3px;\r\n                    \"\r\n                  >\r\n                    <tr>\r\n                      <td style=\"padding: 20px\">\r\n                        <p style=\"margin: 0; font-weight: bold; font-size: 16px\">\r\n                          Invoice #{{invoiceNumber}}\r\n                        </p>\r\n                      </td>\r\n                        <td width=\"55%\">\r\n                          <p style=\"margin: 0 0 0 0; color: #666666\">\r\n                            Status:\r\n                            <span style=\"color: #4caf50; font-weight: bold\">\r\n                            Scheduled for {{ promiseDate}}\r\n                            </span>\r\n                          </p>\r\n                      </td>\r\n                    </tr>\r\n                  </table>\r\n                {{/if}}\r\n                {{#if (eq tag 'wasPaid')}}\r\n                <table\r\n                  cellpadding=\"0\"\r\n                  cellspacing=\"0\"\r\n                  border=\"0\"\r\n                  width=\"100%\"\r\n                  style=\"\r\n                    margin-bottom: 10px;\r\n                    background-color: #f9f9f9;\r\n                    border-left: 4px solid #ff9800;\r\n                    border-radius: 3px;\r\n                  \"\r\n                >\r\n                  <tr>\r\n                    <td style=\"padding: 20px\">\r\n                      <p style=\"margin: 0; font-weight: bold; font-size: 16px\">\r\n                        Invoice #{{invoiceNumber}}\r\n                      </p>\r\n                     </td>\r\n                      <td width=\"55%\">\r\n                        <p style=\"margin: 0 0 0 0; color: #666666\">\r\n                          Status:\r\n                          <span style=\"color: #ff9800; font-weight: bold\">\r\n                          Payment Research Required\r\n                          </span>\r\n                        </p>\r\n                    </td>\r\n                  </tr>\r\n                </table>\r\n                {{/if}}\r\n                \r\n                {{#if (eq tag 'shouldEscalate')}}\r\n                <table\r\n                  cellpadding=\"0\"\r\n                  cellspacing=\"0\"\r\n                  border=\"0\"\r\n                  width=\"100%\"\r\n                  style=\"\r\n                    margin-bottom: 10px;\r\n                    background-color: #f9f9f9;\r\n                    border-left: 4px solid #f44336;\r\n                    border-radius: 3px;\r\n                  \"\r\n                >\r\n                  <tr>\r\n                    <td style=\"padding: 20px\">\r\n                      <p style=\"margin: 0; font-weight: bold; font-size: 16px\">\r\n                        Invoice #{{invoiceNumber}}\r\n                      </p>\r\n                     </td>\r\n                      <td width=\"55%\">\r\n                        <p style=\"margin: 0 0 0 0; color: #666666\">\r\n                          Status:\r\n                          <span style=\"color: #f44336; font-weight: bold\">\r\n                          Escalation Required\r\n                          </span>\r\n                        </p>\r\n                    </td>\r\n                  </tr>\r\n                </table>\r\n                {{/if}}\r\n                \r\n                {{/each}}\r\n              </td>\r\n            </tr>\r\n          </table>\r\n        </td>\r\n      </tr>\r\n\r\n      <!-- Call Summary Card -->\r\n      <tr>\r\n        <td style=\"padding: 15px 20px 0 20px\">\r\n          <table\r\n            cellpadding=\"0\"\r\n            cellspacing=\"0\"\r\n            border=\"0\"\r\n            width=\"100%\"\r\n            style=\"\r\n              background-color: #ffffff;\r\n              border-radius: 6px;\r\n              box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n            \"\r\n          >\r\n            <tr>\r\n              <td style=\"padding: 20px\">\r\n                <h2\r\n                  style=\"\r\n                    color: {{primaryColor}};\r\n                    margin: 0 0 15px 0;\r\n                    font-size: 18px;\r\n                    border-bottom: 1px solid #eeeeee;\r\n                    padding-bottom: 10px;\r\n                  \"\r\n                >\r\n                  Call Summary\r\n                </h2>\r\n                <p style=\"margin: 0; line-height: 1.5; color: #333333\">\r\n                {{callSummary}}\r\n                </p>\r\n              </td>\r\n            </tr>\r\n          </table>\r\n        </td>\r\n      </tr>\r\n      \r\n      {{#if hasEscalationNotes}}\r\n        <!-- Escalations Card -->\r\n        <tr>\r\n          <td style=\"padding: 15px 20px 0 20px\">\r\n            <table\r\n              cellpadding=\"0\"\r\n              cellspacing=\"0\"\r\n              border=\"0\"\r\n              width=\"100%\"\r\n              style=\"\r\n                background-color: #fff8e1;\r\n                border-radius: 6px;\r\n                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n                border-left: 4px solid #ff9800;\r\n              \"\r\n            >\r\n              <tr>\r\n                <td style=\"padding: 20px\">\r\n                  <h2\r\n                    style=\"\r\n                      color: #ff9800;\r\n                      margin: 0 0 0 0;\r\n                      font-size: 18px;\r\n                      border-bottom: 1px solid #ffe0b2;\r\n                    \"\r\n                  >\r\n                    Escalations\r\n                  </h2>\r\n                </td>\r\n              </tr>\r\n              {{#each invoiceData}}\r\n              {{#if (eq tag 'shouldEscalate')}}\r\n              <tr>\r\n              <td style=\"padding: 0 20px 15px 20px\">\r\n                <p style=\"margin: 0; line-height: 1.5; color: #333333\">\r\n                <strong>Invoice #{{invoiceNumber}}:</strong> {{escalationNotes}}\r\n                </p>\r\n             </td>\r\n              </tr>\r\n              {{/if}}\r\n              {{/each}}\r\n            </table>\r\n          </td>\r\n        </tr>\r\n        {{/if}}\r\n        \r\n      <!-- Client Related Updates -->\r\n      {{#if clientUpdates}}\r\n      <tr>\r\n          <td style=\"padding: 15px 20px 0 20px\">\r\n            <table\r\n              cellpadding=\"0\"\r\n              cellspacing=\"0\"\r\n              border=\"0\"\r\n              width=\"100%\"\r\n              style=\"\r\n                background-color: #fff8e1;\r\n                border-radius: 6px;\r\n                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n                border-left: 4px solid #ff9800;\r\n              \"\r\n            >\r\n              <tr>\r\n                <td style=\"padding: 20px\">\r\n                  <h2\r\n                    style=\"\r\n                      color: #ff9800;\r\n                      margin: 0 0 0 0;\r\n                      font-size: 18px;\r\n                      border-bottom: 1px solid #ffe0b2;\r\n                    \"\r\n                  >\r\n                    Client Updates\r\n                  </h2>\r\n                </td>\r\n              </tr>\r\n              <tr>\r\n              <td style=\"padding: 0 20px 15px 20px\">\r\n                <p style=\"margin: 0; line-height: 1.5; color: #333333\">\r\n                {{clientUpdates}}\r\n                </p>\r\n             </td>\r\n              </tr>\r\n            </table>\r\n          </td>\r\n        </tr>\r\n      {{/if}}\r\n\r\n      <!-- Recording Link Card -->\r\n      <tr>\r\n        <td style=\"padding: 15px 20px 0 20px\">\r\n          <table\r\n            cellpadding=\"0\"\r\n            cellspacing=\"0\"\r\n            border=\"0\"\r\n            width=\"100%\"\r\n            style=\"\r\n              background-color: #ffffff;\r\n              border-radius: 6px;\r\n              box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n              margin-bottom: 20px;\r\n            \"\r\n          >\r\n            <tr>\r\n            {{#if callRecordingLink}}\r\n              <td style=\"padding: 20px; text-align: center\">\r\n                <h2\r\n                  style=\"\r\n                    color: {{primaryColor}};\r\n                    margin: 0 0 15px 0;\r\n                    font-size: 18px;\r\n                    border-bottom: 1px solid #eeeeee;\r\n                    padding-bottom: 10px;\r\n                  \"\r\n                >\r\n                  Call Recording\r\n                </h2>\r\n                <a\r\n                  href=\"{{callRecordingLink}}\"\r\n                  target=\"_blank\"\r\n                  style=\"\r\n                    display: inline-block;\r\n                    background-color: {{primaryColor}};\r\n                    color: #ffffff;\r\n                    text-decoration: none;\r\n                    padding: 10px 20px;\r\n                    border-radius: 4px;\r\n                    font-weight: bold;\r\n                  \"\r\n                  >Listen to Full Recording</a\r\n                >\r\n              </td>\r\n              {{/if}}\r\n            </tr>\r\n          </table>\r\n        </td>\r\n      </tr>\r\n    </table>\r\n    </div>\r\n  </body>\r\n</html>"
  },
  "type": "template_email"
}
